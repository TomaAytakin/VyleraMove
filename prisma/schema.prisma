// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  // Stored as String for SQLite compatibility. Use 'UserRole' enum from types/enums.ts
  role      String   @default("DRIVER")
  trips     Trip[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vehicle {
  id             String        @id @default(cuid())
  make           String
  model          String
  licensePlate   String        @unique
  vin            String        @unique
  capacity       Int
  // Stored as String. Use 'VehicleStatus' enum from types/enums.ts
  status         String        @default("AVAILABLE")
  // Stored as String. Use 'VehicleType' enum from types/enums.ts
  type           String
  currentMileage Int           @default(0)
  trips          Trip[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Trip {
  id              String     @id @default(cuid())
  pickupLocation  String
  dropoffLocation String
  pickupTime      DateTime
  // Stored as String. Use 'TripStatus' enum from types/enums.ts
  status          String     @default("SCHEDULED")

  // Resort Specifics
  guestName       String?
  roomNumber      String?
  flightNumber    String?
  guestNotes      String?

  // Relations
  vehicleId       String
  vehicle         Vehicle    @relation(fields: [vehicleId], references: [id])

  driverId        String
  driver          User       @relation(fields: [driverId], references: [id])

  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}
